@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
	<form asp-area="" asp-controller="Login" asp-action="Logout" id="logoutForm"
		  method="post" class="navbar-right">
		<nav class="mdl-navigation mdl-layout--large-screen-only">
			<a class="mdl-navigation__link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
		</nav>
	</form>
}
else
{
	<nav class="mdl-navigation mdl-layout--large-screen-only">
		<a class="mdl-navigation__link" id="registerLink" asp-controller="Login" asp-action="Register"> Register </a>
		<a class="mdl-navigation__link" id="loginLink" asp-controller="Login" asp-action="Login"> Log in </a>

	
	</nav>
}